<UserControl x:Class="InTwo.Controls.LogFiles"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             FontFamily="{StaticResource PhoneFontFamilyNormal}"
             FontSize="{StaticResource PhoneFontSizeNormal}"
             Foreground="{StaticResource PhoneForegroundBrush}"
             d:DesignHeight="480"
             d:DesignWidth="480">

    <Grid x:Name="LayoutRoot"
          Background="Black">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="If you have been asked by us to send us your logs, or you've had In Two just disappear on you, then do please email your logs to us so we can improve your experience."
                       TextWrapping="Wrap"
                       Style="{StaticResource PhoneTextNormalStyle}" />
            <HyperlinkButton Content="Send logs"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             Foreground="{StaticResource PhoneAccentBrush}"
                             Click="ButtonBase_OnClick"/>
        </StackPanel>
    </Grid>
</UserControl>